<h1>Eat Da Burger!!</h1>
<div id="pic">
<img  src="../assets/img/burger.jpeg" alt"hamburger">
</div>
<ul>
  {{#each burgers}}
  	<li>
  	   <p>Hamburger: {{this.id}}</p>
       <p> {{this.burger_name}}</p>
			 <button data-id="{{this.id}}" class="eat">Devour it!</button>
  	</li>
		
  {{/each}}
</ul>

<form id="form" action="/api/burgers" method="POST">
	<textarea id="textArea" type="text" name="burgerName" placeholder="What Burger Do You Desire?"></textarea>

	<button type="submit">Submit</button>
</form>